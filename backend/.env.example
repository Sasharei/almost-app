PORT=8787
NODE_ENV=development

# Optional. If set, mobile client must pass x-app-secret header.
APP_SHARED_SECRET=
REQUEST_TTL_MS=900000
REPLAY_WINDOW_MS=86400000
STORE_PATH=
STORE_FLUSH_MS=2000

# Optional webhook secret (query ?secret=... or x-webhook-secret header)
WEBHOOK_SHARED_SECRET=

# Apple validation
# When APPLE_VALIDATION_ENABLED=1, the following are required:
# APPLE_BUNDLE_ID, APPLE_ISSUER_ID, APPLE_KEY_ID, APPLE_PRIVATE_KEY
APPLE_VALIDATION_ENABLED=0
APPLE_ENVIRONMENT=sandbox
APPLE_BUNDLE_ID=com.sasarei.almostclean
APPLE_ISSUER_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
APPLE_APPLE_ID=

# Apple server notifications webhook
APPLE_WEBHOOK_SECRET=
APPLE_WEBHOOK_VERIFY_SIGNATURE=0
APPLE_WEBHOOK_REQUIRE_VERIFIED=0
APPLE_WEBHOOK_ONLINE_CHECKS=0
# Comma-separated file paths to Apple Root CA certificates (DER .cer files)
APPLE_ROOT_CA_PATHS=./certs/AppleRootCA-G3.cer,./certs/AppleRootCA-G2.cer

# Google Play validation
# When GOOGLE_VALIDATION_ENABLED=1, the following are required:
# GOOGLE_PACKAGE_NAME, GOOGLE_SERVICE_ACCOUNT_JSON
GOOGLE_VALIDATION_ENABLED=0
GOOGLE_PACKAGE_NAME=com.sasarei.almostclean
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Google RTDN webhook
GOOGLE_RTDN_SECRET=
