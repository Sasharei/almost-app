require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
require 'fileutils'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] ||= '0' if podfile_properties['newArchEnabled'] == 'false'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] ||= podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']
ENV['RCT_USE_RN_DEP'] ||= '1' if podfile_properties['ios.buildReactNativeFromSource'] != 'true' && podfile_properties['newArchEnabled'] != 'false'
ENV['RCT_USE_PREBUILT_RNCORE'] ||= '1' if podfile_properties['ios.buildReactNativeFromSource'] != 'true' && podfile_properties['newArchEnabled'] != 'false'
platform :ios, podfile_properties['ios.deploymentTarget'] || '15.1'
use_modular_headers!

prepare_react_native_project!

target 'almostclean' do
  use_expo_modules!

  if ENV['EXPO_USE_COMMUNITY_AUTOLINKING'] == '1'
    config_command = ['node', '-e', "process.argv=['', '', 'config'];require('@react-native-community/cli').run()"];
  else
    config_command = [
      'npx',
      'expo-modules-autolinking',
      'react-native-config',
      '--json',
      '--platform',
      'ios'
    ]
  end

  config = use_native_modules!(config_command)

  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']
  use_frameworks! :linkage => ENV['USE_FRAMEWORKS'].to_sym if ENV['USE_FRAMEWORKS']

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false',
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true',
    )

    sentry_header = File.join(__dir__, 'Pods', 'Sentry', 'Sources', 'Sentry', 'include', 'SentryThreadMetadataCache.hpp')
    if File.exist?(sentry_header)
      FileUtils.chmod('u+w', sentry_header)
      contents = File.read(sentry_header)
      patched = contents.gsub('std::vector<const ThreadHandleMetadataPair>', 'std::vector<ThreadHandleMetadataPair>')
      File.write(sentry_header, patched) if contents != patched
    end

    # React 0.81 ships two modulemaps registering `react_runtime`, which Xcode 16.1 treats as an error.
    # The `React-RuntimeCore` modulemap already exports everything we need, so drop the duplicate.
    jsitooling_modulemap = File.join(__dir__, 'Pods', 'Headers', 'Public', 'react_runtime', 'React-jsitooling.modulemap')
    if File.exist?(jsitooling_modulemap)
      FileUtils.chmod('u+w', jsitooling_modulemap)
      contents = File.read(jsitooling_modulemap)
      patched = contents.gsub('module react_runtime', 'module react_runtime_jsitooling')
      File.write(jsitooling_modulemap, patched) if contents != patched
    end

    runtime_apple_modulemap = File.join(__dir__, 'Pods', 'Headers', 'Public', 'ReactCommon', 'React-RuntimeApple.modulemap')
    if File.exist?(runtime_apple_modulemap)
      FileUtils.chmod('u+w', runtime_apple_modulemap)
      contents = File.read(runtime_apple_modulemap)
      patched = contents.gsub('module ReactCommon', 'module react_runtime_apple')
      File.write(runtime_apple_modulemap, patched) if contents != patched
    end

    # Ensure the pod target itself emits a unique module name so that Xcode does not
    # try to treat JSITooling headers as part of React-RuntimeCore.
    min_ios_target = '15.1'
    installer.pods_project.targets.each do |target|
      case target.name
      when 'React-jsitooling'
        target.build_configurations.each do |config|
          config.build_settings['PRODUCT_MODULE_NAME'] = 'react_runtime_jsitooling'
        end
      when 'React-RuntimeApple'
        target.build_configurations.each do |config|
          config.build_settings['PRODUCT_MODULE_NAME'] = 'react_runtime_apple'
        end
      end
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = min_ios_target
      end
    end

    disable_flags = 'SENTRY_TARGET_PROFILING_SUPPORTED=0 SENTRY_PROFILING_SUPPORTED=0'
    installer.pods_project.targets.each do |target|
      next unless target.name == 'Sentry'

      target.build_configurations.each do |config|
        definitions = config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        definitions = Array(definitions).join(' ')
        definitions = '$(inherited)' if definitions.strip.empty?
        next if definitions.include?('SENTRY_TARGET_PROFILING_SUPPORTED')

        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = "#{definitions} #{disable_flags}"
      end
    end

    sentry_support_dir = File.join(Pod::Config.instance.installation_root, 'Pods', 'Target Support Files', 'Sentry')
    Dir.glob(File.join(sentry_support_dir, 'Sentry.*.xcconfig')).each do |xcconfig_path|
      next unless File.exist?(xcconfig_path)
      contents = File.read(xcconfig_path)
      next if contents.include?('SENTRY_TARGET_PROFILING_SUPPORTED')

      contents = contents.gsub(/(GCC_PREPROCESSOR_DEFINITIONS = .+)/) do |line|
        "#{line} #{disable_flags}"
      end
      File.write(xcconfig_path, contents)
    end

    installer.pods_project.save
  end
end
